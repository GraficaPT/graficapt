{
  "rewrites": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(googlebot|bingbot|yandexbot|duckduckbot|baiduspider|facebookexternalhit|twitterbot|slackbot|linkedinbot|embedly|quora|pinterest|whatsapp|discordbot)"
        }
      ],
      "destination": "/api/prerender?path=$1"
    },
    {
      "source": "/produto/:slug",
      "destination": "/product.html?slug=:slug"
    }
  ],
  "functions": {
    "api/prerender.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    }
  }
}
